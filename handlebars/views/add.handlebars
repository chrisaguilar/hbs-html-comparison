<div class="row">
    <div class="col-12">
        <h2>Add a New Animal</h2>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <form id="add-animal">
            <div class="form-group">
                <label for="name">Animal Name</label>
                <input type="text" id="name" class="form-control" placeholder="Name" />
            </div>
            <div class="form-group">
                <label for="sound">Animal Sound</label>
                <input type="text" id="sound" class="form-control" placeholder="Sound" />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <p>
            <a href="/">Go Home</a>
        </p>
    </div>
</div>

<script defer src="/js/add.js"></script>
